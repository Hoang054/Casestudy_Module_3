@model Role
@{
    ViewBag.Title = "Edit Role";
}
<h3>Role Managemet &gt; @ViewBag.Title</h3>

<form asp-controller="Role" asp-action="Edit" method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-danger">
        <input hidden asp-for="RoleId" />
    </div>

    <div class="row">
        <div class="col-sm-2">
            <label asp-for="RoleName"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-sm-12">
            <button class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteRoleModal">
                Delete
            </button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>
<!-- Button to Open the Modal -->


<!-- The Modal -->
<div class="modal" id="deleteRoleModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <form asp-controller="Role" asp-action="Delete" method="post">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Confirm delete role</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Are you sure? Remove
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-danger" >YEs</button>*@
                    <a asp-controller="Role" asp-action="Delete" asp-route-id="@Model.RoleId" class="btn btn-danger">Yes</a>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                </div>
            </form>

        </div>
    </div>
</div>