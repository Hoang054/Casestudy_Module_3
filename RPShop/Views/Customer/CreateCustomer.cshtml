@model RPShop.Models.ViewModels.CreateCustomer.CustomerView;
@inject RPDbcontext context;
@{ ViewBag.Title = "Add Product";}

<form id="customerForm">
    <div class="row">
        <div class="col-2">
            <label asp-for="FullName"></label>
        </div>
        <div class="col-9">
            <input asp-for="FullName" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Email"></label>
        </div>
        <div class="col-9">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="PhoneNumber"></label>
        </div>
        <div class="col-9">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <label asp-for="Address"></label>
        </div>
        <div class="col-9">
            <input asp-for="Address" class="form-control" />
        </div>
    </div>
    <a href="#" id="submitButton" class="btn btn-outline-success">Create</a>
</form>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        $("#submitButton").on("click", function () {
            var myformdata = $("#customerForm").serialize();
            console.log(myformdata);
            $.ajax({
                type: "POST",
                url: "/Customer/CreateCustomer",
                data: myformdata,
                success: function () {
                    alert("Create Success");
                    window.location.href = "/Customer/ListCustomers";

                }
            });
        });

    });
</script>

